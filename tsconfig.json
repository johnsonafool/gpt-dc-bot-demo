{
  "include": ["./*.ts", "index.ts"],
  "compilerOptions": {
    "rootDir": "./",
    "preserveSymlinks": true,
    "target": "ES5",
    "lib": ["ESNext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}